// now let's draw our "sprite" 10 times with random offsets and scaling\
function draw()\
\{\
	var i;\
\
	with (Math) \{\
	with (sketch) \{\
	glclear();\
	for (i=0;i<10;i++) \{\
		glmatrixmode("modelview");\
		glpushmatrix();\
		gltranslate(random()-0.5,random()-0.5,random()-0.5);	\
		glscale(random(),random(),random());\
		drawcommandlist(mycmdlist);\
		glmatrixmode("modelview");\
		glpopmatrix();\
	\}\
	\}\
	\}\
	refresh();\
\}\
