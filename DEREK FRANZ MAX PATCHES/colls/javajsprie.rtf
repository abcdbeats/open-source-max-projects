function drawcommandlist(cmdlist)\
\{\
	var i,argarray;\
\
	for (i=0;i<cmdlist.length;i++)\
	\{\
	// first entry is the sketch method, pull out of the array\
		meth = cmdlist[i].shift();\
	// call the sketch method using array notation (equivalent to dot notation)\
		sketch[meth](cmdlist[i]);\
	// put the method string back on the beginning of the array\
		cmdlist[i].unshift(meth);\
	\}\
\}\
